<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #333;
            color: #fff;
            padding: 15px 20px;
        }

        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logo {
            font-size: 24px;
            margin-right: 200px; /* Add margin to separate logo from search bar */
        }

        .category-buttons {
            display: flex;
            align-items: center;
        }

        .category-buttons button {
            padding: 10px 15px;
            margin-right: 10px;
            border: none;
            background-color: #555;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
        }

        .category-buttons button:hover {
            background-color: #777;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }

        .a-colr {
            text-decoration: none;
            color: inherit;
        }

        .card-col {
            margin: 10px;
            flex: 1 0 21%; /* Adjust the width of each card according to your needs */
        }

        .card {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            visibility: hidden;
            opacity: 0;
            transition: all 0.3s ease;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .card:hover .overlay {
            visibility: visible;
            opacity: 1;
        }
        
        @media screen and (max-width: 768px) {
            .logo {
                font-size: 20px;
                margin-right: 10px; /* Adjust margin for smaller screens */
            }

            .category-buttons button {
                padding: 8px 12px;
            }
        }
        @media screen and (max-width: 768px) {
    .container {
        flex-direction: column;
        align-items: flex-start;
    }

    .logo {
        margin-right: 0;
        margin-bottom: 10px;
    }

    .category-buttons {
        margin-top: 10px;
    }

    .category-buttons button {
        margin-right: 5px;
        margin-bottom: 5px;
        font-size: 14px;
    }
}

    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="logo">Dremers</div>
            <div class="category-buttons">
                <button onclick="navigateTo('/genstudent')">General</button>
                <button onclick="navigateTo('/obcstudent')">OBC</button>
                <button onclick="navigateTo('/scstudent')">SC</button>
                <button onclick="navigateTo('/ststudent')">ST</button>
                <button onclick="navigateTo('/otherstudent')">Others</button>
            </div>
        </div>
    </nav>

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <% for(let dataa of data) { %>
            <a class="a-colr" href="/studentinformation/<%= dataa._id %>">
                <div class="card-col hover">
                    <div class="card">
                        <img src="<%= dataa.studentImage %>" class="card-img-top" style="height: 20rem;"
                            alt="listing image">
                        <div class="overlay">
                            <p><b>Name:</b> <%= dataa.Fname %> <%= dataa.Lname %><br><br>
                                <b>Descripition</b> <%= dataa.Descripition %><br><br>
                                <b>Father name:</b><%= dataa.Fname %>
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <script>
        function navigateTo(url) {
            window.location.href = url;
        }
    </script>
</body>
</html>
