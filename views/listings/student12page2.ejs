<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Select the form element
        var form = document.getElementById('userForm');

        // Add event listener for form submission
        form.addEventListener('submit', function(event) {
            // Prevent the form from submitting
            event.preventDefault();

            // Validate the form inputs
            var isValid = validateForm();

            // If form inputs are valid, submit the form
            if (isValid) {
                form.submit();
            }
        });

        // Function to validate form inputs
        function validateForm() {
            var isValid = true;

            // Validate First Name
            var firstName = document.getElementById('FFname').value;
            if (!firstName.trim()) {
                alert('Please enter a valid First Name.');
                isValid = false;
            }

            // Validate Last Name
            var lastName = document.getElementById('Lname').value;
            if (!lastName.trim()) {
                alert('Please enter a valid Last Name.');
                isValid = false;
            }

            // Validate DOB
            var dob = document.getElementById('exampleFormControlInput1').value;
            if (!dob) {
                alert('Please enter a valid DOB.');
                isValid = false;
            }

       

            // Validate Number
            var number = document.getElementById('FNumber').value;
            if (!number.trim() || isNaN(number)) {
                alert('Please enter a valid Number.');
                isValid = false;
            }

            // Validate Aadhar Number
            var aadhar = document.getElementById('aadharInput').value;
            if (!aadhar || aadhar.length !== 12 || isNaN(aadhar)) {
                alert('Please enter a valid 12-digit Aadhar number.');
                isValid = false;
            }

            // Validate Owner Name
            var ownerName = document.getElementById('OName').value;
            if (!ownerName.trim()) {
                alert('Please enter a valid Owner Name.');
                isValid = false;
            }

            // Validate Owner Number
            var ownerNumber = document.getElementById('ONUMBER').value;
            if (!ownerNumber.trim() || isNaN(ownerNumber)) {
                alert('Please enter a valid Owner Number.');
                isValid = false;
            }

            // Validate IFSC Code
            var ifscCode = document.getElementById('IFSC').value;
            if (!ifscCode.trim()) {
                alert('Please enter a valid IFSC Code.');
                isValid = false;
            }

            // Validate Account Number
            var accountNumber = document.getElementById('AccountNumber').value;
            if (!accountNumber.trim()) {
                alert('Please enter a valid Account Number.');
                isValid = false;
            }

            // Validate 10th Percentage
            var tenthPercentage = document.getElementsByName('tenth')[0].value;
            if (!tenthPercentage.trim() || isNaN(tenthPercentage)) {
                alert('Please enter a valid 10th Percentage.');
                isValid = false;
            }

            // Validate 12th Percentage
            var twelfthPercentage = document.getElementsByName('evelenth')[0].value;
            if (!twelfthPercentage.trim() || isNaN(twelfthPercentage)) {
                alert('Please enter a valid 12th Percentage.');
                isValid = false;
            }

            // Additional validation checks for other fields...

            return isValid;
        }

   
    });


</script>
    


