      <script>
        function validateAadhar() {
            // Get Aadhar number from user input
            var aadharNumber = document.getElementById("aadharInput").value;

            // Regular expression to check Aadhar number format
            var aadharPattern = /^\d{12}$/;

            // Check if Aadhar number matches the pattern
            if (!aadharPattern.test(aadharNumber)) {
                alert("Invalid Aadhar number format. Please enter a 12-digit Aadhar number.");
                return;
            }

            // Check if each digit is within the valid range (0-9)
            for (var i = 0; i < aadharNumber.length; i++) {
                var digit = parseInt(aadharNumber[i]);

                if (isNaN(digit) || digit < 0 || digit > 9) {
                    alert("Invalid Aadhar number. Digits must be between 0 and 9.");
                    return;
                }
            }

            alert("Aadhar number is valid.");
        }
    </script>
