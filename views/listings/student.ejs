<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* styles.css */
body {
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.background {
  background: linear-gradient(180deg, #2C3E50 0%, #3498DB 100%);
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content {
  text-align: center;
  color: #ECF0F1;
}

h1 {
  font-size: 2em;
}

.buttons {
  margin-top: 20px;
}

.register-button {
  background-color: #1ABC9C;
  color: #ECF0F1;
  border: none;
  padding: 10px 20px;
  font-size: 1em;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.register-button:hover {
  background-color: #16A085;
}

    </style>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Animated Page</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="background">
    <div class="content">
      <h1>Welcome to the Registration Page</h1>
      <div class="buttons">
        <button id="button12" class="register-button" onclick="register('12th')">Register as 12th Student</button>
        <button id="buttonCollege" class="register-button" onclick="register('college')">Register as College Student</button>
      </div>
    </div>
  </div>

  <script>
    function register(type) {
      alert('Registration initiated for ' + type + ' student!');
    }
  </script>
</body>
</html>
